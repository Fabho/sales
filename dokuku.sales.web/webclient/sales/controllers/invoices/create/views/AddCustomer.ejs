<form id="formAddCustDialog" method="POST">
  <div class="error" id="errorAddCust"></div>
  <table width="100%" cellpadding="3px">
    <tr>
      <td width="30%" class="right">
        <div class="mandatoryTxt">Nama Pelanggan</div>
      </td>
      <td width="70%" class="left">
        <input type="text" name="Name" id="CustName"/>
      </td>
    </tr>
    <tr>
      <td class="right">
        <div class="mandatoryTxt">Mata Uang</div>
      </td>
      <td class="left">
        <select name="Currency">
          <option value="IDR">IDR - Rupiah</option>
          <option value="USD">USD - US Dollar</option>
        </select>
      </td>
    </tr>
    <tr>
      <td class="right">Nama Depan</td>
      <td class="left">
        <select class="field_select" name="Salutation">
          <option value ="" selected="selected">None</option>
          <option value ="Bapak"> Bapak </option>
          <option value ="Ibu"> Ibu. </option>
        </select>
        <input type="text" name="FirstName" id="firstNameCust"/>
      </td>
    </tr>
    <tr>
      <td class="right">Nama Belakang</td>
      <td class="left">
        <input type="text" name="LastName"/>
      </td>
    </tr>
    <tr>
      <td class="right">Handphone</td>
      <td class="left">
        <input type="text" name="Phone"/>
      </td>
    </tr>
    <tr>
      <td class="right">Email</td>
      <td class="left">
        <input type="text" name="Email"/>
      </td>
    </tr>
    <tr id="trmoreFieldCustomer">
      <td class="right"></td>
      <td class="left">
        <label id="moreFieldCustomer">Klik disini untuk keterangan lainnya</label>
      </td>
    </tr>
  </table>
  <table width="100%" class="hiddenTable" cellpadding="3px">
    <tr>
      <td width="30%" class="right">
        Alamat
      </td>
      <td width="70%" class="left">
        <textarea name="BillingAddress"></textarea>
      </td>
    </tr>
    <tr>
      <td class="right">Kota</td>
      <td class="left">
        <input type="text" name="City"/>
      </td>
    </tr>
    <tr>
      <td class="right">Provinsi</td>
      <td class="left">
        <input type="text" name="Province"/>
      </td>
    </tr>
    <tr>
      <td class="right">Kode Pos</td>
      <td class="left">
        <input type="text" name="PostalCode"/>
      </td>
    </tr>
    <tr>
      <td class="right">Negara</td>
      <td class="left">
        <input type="text" name="State"/>
      </td>
    </tr>
    <!--<tr>
      <td class="right">Fax</td>
      <td class="left">
        <input type="text" name="Fax"/>
      </td>
    </tr>-->
  </table>
  <div class="submitAddCust">
    <input type="button" value="Simpan dan Pilih" id="createCust"/>
    <input type="button" value="Batal" id="btnCancelAddCust"/>
  </div>
</form>