<div id='CurrencyDiv'>
  <table class='CurrencyTable'>
    <tbody>
      <tr>
        <td id ='formListCurrency'>
          <div class ='ListCurrencyDiv'>
            <div class="HeaderDIVListCurrency" id="TitleSpan">Currency Settings</div>
            <div class="classPesan"></div>
            <div class="ClassSubMenuDataCurrency" id="idKosong">
              <table width="900px">
                <tr>
                  <td width="400px">
                    <table>
                      <tr>
                        <td>
                          <div class="menuLeft" id="hapus">
                            <div class="floatLeft">Hapus</div>
                            <div class="iconHapus"></div>
                          </div>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </div>
            <div class='ClassListCurrency'>
              <table class='dataCurrency' width='100%' style='border-collapse:collapse;'>
                <thead>
                  <tr style='background :#F0F0F0'>
                    <th class='thDataCurrency tdDataCurrencyCenter textAlignRight' style='width: 6%;'>
                      <input type="checkbox" name="SelectAll" class="SelectAllCurrency"/>
                    </th>
                    <th class='thDataCurrency tdDataCurrencyCenter' style='width: 4%;'></th>
                    <th class='thDataCurrency tdDataCurrencyLeft' style='width: 50%;'>Currency Name</th>
                    <th class='thDataCurrency tdDataCurrencyRight'style='width: 20%;'>Currency Symbol</th>
                    <th class='thDataCurrency tdDataCurrencyRight'style='width: 20%;'>Format</th>
                  </tr>
                </thead>
                <tbody class='BodyDataCurrency'>

                </tbody>
              </table>
            </div>
            <div class ='Pagging'>
              <div class ='DivPrev'>
                <img class ='first pagingSize'></img>
                <img class ='prev pagingSize'></img>
              </div>
              <div class ="disablePrev" style="display:none;">
                <img class ='firstDisable pagingSize'></img>
                <img class ='prevDisable pagingSize'></img>
              </div>
              <div class ='DivPage'>
                Page <input type='text' id='idInputPage' style="width:20px; height:14px"/> of <span id="totalPage"></span>
              </div>
              <div class='DivNext'>
                <img class ='next pagingSize'></img>
                <img class ='last pagingSize'></img>
              </div>
              <div class ="disableNext" style="display:none;">
                <img class ='nextDisable pagingSize'></img>
                <img class ='lastDisable pagingSize'></img>
              </div>
              <div class='DivlimitData'>
                <select class="limit" id="limitData" style="width:50px; height:21px">
                  <option value="10" selected="selected"> 10 </option>
                  <option value="20"> 20 </option>
                  <option value="30"> 30 </option>
                  <option value="40"> 40 </option>
                </select>
              </div>


            </div>
          </div>
        </td>
        <td class='MenuFormListCurrency'>
          <div class='BtnTambahCurrency' id='btn-add-currency'>New Currency</div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class='MessageConfirmation'>
  <table>
    <tr>
      <td>
        <div class='ConfirmationHeader'>
          <div class='imagesConfirm'></div>
          <div class='isiConfirmationHeader'>Konfirmasi</div>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class='BodyConfirmationMassage'>
          <div>Apakah anda yakin akan menghapus data ini</div>
          <div class='ButtonConfirmationMassageYa'>Ya</div>
          <div class='ButtonConfirmationMassageTidak'>Tidak</div>
        </div>
      </td>
    </tr>
  </table>
</div>
