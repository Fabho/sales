<div class='container'>
	<div class='divorganization'>
		<div class='divheaderorganization'><label class='title'>Welcome to Dokuku Sales</label></div>
		<div class='divcontain'>
			<div id='error'></div>
			<div id='welcomemessage'>Hi <%= this.name %></div>
			<div class='text'>Setup your Company and get started with using Dokuku Invoice for your invocing.</div>
			<form method='POST' id='setuporganization' action="/setuporganization">
				<label class='red divfieldheader'>Company Details</label>
				<div class='formgroup'>
					<table width='100%' id='tblsetorg'>
						<tr>
							<td class='red left'>Nama Organisasi</td>
							<td class='right'>
								<input type='text' id="name" name="name"/>
								<span class="hint">
                                        Masukkan nama Organisasi anda untuk digunakan pada Dokuku Invoice.
                                <span class="hint-pointer">&nbsp;</span></span>
							</td>
						</tr>
						<tr>
							<td class='left'>Zona Waktu</td>
							<td class='right'>
								<select id="timezone" name='timezone'>
									<option value='WIB'>WIB</option>
									<option value='WITA'>WITA</option>
									<option value='WIT'>WIT</option>
								</select>
							</td>
						</tr>
					</table>
				</div>
				<label class='red divfieldheader'>Currency & Financial Settings</label>
				<div class='formgroup'>
					<table width='100%' id='setuporgcurr'>
						<tr>
							<td class='left'>Mata Uang</td>
							<td class='right'>
								<select id='curr' name='curr'>
									<option value='0'></option>
									<option value='IDR'>IDR - Rupiah</option>
									<option value='USD'>USD - US Dolar</option>
									<option value='SGD'>SGD - Singapore Dolar</option>
									<option value='EUR'>EUR - Euro</option>
								</select>
							</td>
						</tr>
						<tr>
							<td class='left'></td>
							<td class='right'>
							<label class='warning'>Specify your accounting currency. This <b>cannot</b> be changed later.</label>
							</td>
						</tr>
						<tr>
							<td class='left'>Fiscal Year Starts In</td>
							<td class='right'>
								<select id='starts' name='starts'>
									<option value='1'>Januari</option>
									<option value='2'>Febuari</option>
									<option value='3'>Maret</option>
									<option value='4'>April</option>
									<option value='5'>Mei</option>
									<option value='6'>Juni</option>
									<option value='7'>Juli</option>
									<option value='8'>Agustus</option>
									<option value='9'>September</option>
									<option value='10'>Oktober</option>
									<option value='11'>November</option>
									<option value='12'>Desember</option>
								</select>
							</td>
						</tr>
					</table>
				</div>
				<div class='divBtn'>
					<input type='submit' value='Start Invocing'/>
				</div>
			</form>
		</div>
	</div>
</div>