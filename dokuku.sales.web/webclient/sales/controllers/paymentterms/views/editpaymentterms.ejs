<div class='mainFrame'>
  <div class="topBandHeaderDIV">
    <div class="HeaderDIVLeft" id="TambahMU">Ubah Termin Pembayaran</div>
  </div>
  <div class="error" id="errorCreateItemDiv"></div>
  <div class="mainDivWidth">
    <div id="editCurrencyForm">
      <div class="ie-form AddCurrencyFormDiv">
        <table>
          <tbody>
            <tr>
              <td class="labelLeft">
                <span class="requiredFieldLabel">Kode </span>
              </td>
              <td class="field">
                <input type="hidden" name="_id" id="_id" hidden="hidden" value="<%= this._id %>"/>
                <input type="text" name="kode" id="kode" oninput="setCustomValidity('')" oninvalid="setCustomValidity('Kode tidak boleh kosong')" required="required" value="<%= this.Code %>"/>
              </td>
              <td>
                <div class="messageVerify "></div>
              </td>
            </tr>
            <tr>
              <td class="labelLeft">
                <span class="requiredFieldLabel">Nama </span>
              </td>
              <td class="field">
                <select name="nama" id="nama">
                  <option value="hari">Hari</option>
                  <option value="minggu"> Minggu</option>
                  <option value="bulan">Bulan</option>
                  <option value="default">Saat Menerima Kwitansi</option>
                </select>
              </td>
              <td>
                <div class="messageVerify "></div>
              </td>
            </tr>
            <tr>
              <td class="labelLeft">
                <span class="requiredFieldLabel" id="label-jk-waktu">Jangka Waktu </span>
              </td>
              <td class="field">
                <input type="text" name="jangkawaktu" id="jangka-waktu" oninput="setCustomValidity('')" oninvalid="setCustomValidity('Jangka waktu boleh kosong')" required="required" value="<%= this.Term %>"/>
                  <span id="ket"></span>
                </td>
              <td>
                <div class="messageVerify "></div>
              </td>
            </tr>
       
          </tbody>
        </table>
      </div>
    </div>
    <div style="margin-top:30px">
      <p align="center" style="font-size:11px">
        <input type="hidden" id="keywords" name="keywords"></input>
        <input id="UpdatePaymentTerms" type="submit" class="CreateCustomerBtn" name="save" value="Simpan"/>
        atau
        <span style="text-decoration:underline; cursor:pointer; color:red; font-size : 11px" id="CancelPaymentTerms">Batal</span>
      </p>
    </div>
  </div>
</div>